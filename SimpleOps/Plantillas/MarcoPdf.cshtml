        border-bottom-width: @APuntos(Model.AnchoLíneaBajoCabeza - (Model.ModoImpresión ? 7 : 0)); /* Se le restan 7 de los 10 que se agregan al pie para que las medidas sean iguales en ambos modos. */
    }

